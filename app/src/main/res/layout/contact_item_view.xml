<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="contact"
            type="com.example.android.mychat.contacts.ContactItemViewModel">
        </variable>
    </data>
<android.support.constraint.ConstraintLayout
    xmlns:tools = "http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_contact_layout"
    android:onClick="@{contact.onClick}">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_image_view"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_title_brev"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="@{contact.emailBrev}"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/contact_image_view"
        app:layout_constraintEnd_toEndOf="@+id/contact_image_view"
        app:layout_constraintStart_toStartOf="@+id/contact_image_view"
        app:layout_constraintTop_toTopOf="@+id/contact_image_view" />

    <TextView
        android:id="@+id/contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/contact_image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="email@gmail.com"
        android:text="@{contact.email}"/>

    <TextView
        android:id="@+id/contact_last_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/contact_title"
        app:layout_constraintTop_toBottomOf="@+id/contact_title"
        android:text="Hi,leah" />

    <TextView
        android:id="@+id/last_contact_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="28/07" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/contact_image_view"
        app:layout_constraintEnd_toEndOf="@id/last_contact_time"
        app:layout_constraintStart_toStartOf="@+id/contact_last_info" />
</android.support.constraint.ConstraintLayout>
</layout>